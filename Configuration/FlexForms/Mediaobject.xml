										<numIndex index="1">warning</numIndex>
									</numIndex>
									<numIndex index="5" type="array">
										<numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.button.danger</numIndex>
										<numIndex index="1">danger</numIndex>
									</numIndex>
									<numIndex index="6" type="array">
										<numIndex index="0">light</numIndex>
										<numIndex index="1">light</numIndex>
									</numIndex>
									<numIndex index="7" type="array">
										<numIndex index="0">dark</numIndex>
										<numIndex index="1">dark</numIndex>
									</numIndex>
									<numIndex index="8" type="array">
										<numIndex index="0">white</numIndex>
										<numIndex index="1">white</numIndex>
									</numIndex>
								</items>
								<default>secondary</default>
							</config>
						</TCEforms>
					</borderstyle>

					<borderradius>
						<TCEforms>
							<label>Predefined border radius</label>
							<displayCond>FIELD:sDEF.border:=:1</displayCond>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">none</numIndex>
										<numIndex index="1">none</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">rounded</numIndex>
										<numIndex index="1">rounded</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">rounded-top</numIndex>
										<numIndex index="1">rounded-top</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">rounded-right</numIndex>
