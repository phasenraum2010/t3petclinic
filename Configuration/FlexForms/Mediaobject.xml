									</numIndex>
									<numIndex index="6" type="array">
										<numIndex index="0">rounded-circle</numIndex>
										<numIndex index="1">rounded-circle</numIndex>
									</numIndex>
								</items>
								<default>none</default>
							</config>
						</TCEforms>
					</borderradius>


				</el>
			</ROOT>
		</sDEF>

	</sheets>
</T3DataStructure>