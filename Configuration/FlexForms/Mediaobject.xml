<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<type>array</type>
				<TCEforms>
					<sheetTitle>Settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<order>
						<TCEforms>
							<label>Change the order of content in media objects</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">left</numIndex>
										<numIndex index="1">left</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">right</numIndex>
										<numIndex index="1">right</numIndex>
									</numIndex>
								</items>
								<default>left</default>
							</config>
						</TCEforms>
					</order>

					<border>
						<TCEforms>
							<label>Border</label>
							<onChange>reload</onChange>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</border>
					<borderstyle>
						<TCEforms>
							<label>Predefined border styles</label>
							<displayCond>FIELD:sDEF.border:=:1</displayCond>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.button.secondary</numIndex>
										<numIndex index="1">secondary</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.button.primary</numIndex>
										<numIndex index="1">primary</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.button.success</numIndex>
										<numIndex index="1">success</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.button.info</numIndex>
										<numIndex index="1">info</numIndex>
